@using MyAspNETWebsite.Models
@model List<MyAspNETWebsite.Models.Link>

@{
    ViewBag.Title = "Linktár";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Linktár</h2>

<p>
    Ezen az oldalon néhány, általam készített, illetve karbantartott weboldal linkje található meg.
</p>

@if (Model.Count > 0)
{
    <ul>
        @foreach (Link link in Model)
        {
            <li><a href="@link.URL" target="_blank">@link.LinkName</a></li>
        }
    </ul>
}
